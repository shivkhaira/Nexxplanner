files:
    "/etc/httpd/conf.d/ssl_rewrite.conf":
        mode: "000644"
        owner: root
        group: root
        content: |
            RewriteEngine On
            RewriteCond %{HTTP_HOST} !^www\. [NC]
            RewriteRule ^(.*)$ http://www.nexxplanner.com/$1 [L,R=301]
            RewriteCond %{SERVER_PORT} !^443$
            RewriteRule ^(.*)$ https://www.nexxplanner.com/$1 [L,R=301] 