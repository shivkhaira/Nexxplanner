files:
  "/etc/cron.d/my_cron":
    mode: "000644"
    owner: root
    group: root
    content: |
      * * * * * source /opt/python/run/venv/bin/activate && /opt/python/current/app/python pending.py /var/log/job2.log 2>&1

commands:
  rm_old_cron:
    command: "rm -fr /etc/cron.d/*.bak"
    ignoreErrors: true